<h1>Song list</h1>
<% @songs.each do |song| %>
  <div class="song">
    <h3><a href="/songs/<%= song.id %>"><%= song.title %></a> <small>(by: <%= song.author %>)</small></h3>
    <p>
      Link: <a href="<%= song.url %>"><%= song.url %></a>
    </p>
  </div>
<% end %>

<hr/>
